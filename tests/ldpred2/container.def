Bootstrap: docker
From: ubuntu:20.04

%post
	apt -y update
	apt -y install dirmngr gnupg apt-transport-https ca-certificates software-properties-common
	apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
	add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu focal-cran40/'
	apt -y update
	apt -y upgrade
	apt -y install r-base r-base-dev r-base-core r-recommended
	Rscript -e 'install.packages("remotes"); install.packages("bigstatsr"); install.packages("R.utils"); install.packages("dplyr"); install.packages("bigsnpr"); install.packages("argparser")'

%environment
	export LC_ALL=C
